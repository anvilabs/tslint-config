{
  "editor.formatOnSave": false,
  "editor.insertSpaces": true,
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "[json]": {
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.formatOnSave": true
  },

  "eslint.autoFixOnSave": true,
  "eslint.options": {
    "rules": {
      "no-warning-comments": "off",
      "prettier/prettier": "off"
    }
  },

  "files.autoSave": "off",
  "files.exclude": {
    ".eslintcache": true
  }
}
