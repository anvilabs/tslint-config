{
  "name": "@anvilabs/tslint-config",
  "version": "0.0.0-development",
  "description": "Anvilabs' shareable TSLint config",
  "keywords": [
    "tslint",
    "tslint config",
    "config",
    "anvilabs",
    "styleguide"
  ],
  "repository": "anvilabs/tslint-config",
  "homepage": "https://github.com/anvilabs/tslint-config#readme",
  "bugs": {
    "url": "https://github.com/anvilabs/tslint-config/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Ayan Yenbekbay",
    "email": "ayan.yenb@gmail.com",
    "url": "https://yenbekbay.me"
  },
  "files": [
    "index.js"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint.fix": "yarn run lint --fix",
    "test": "yarn run lint",
    "semantic-release": "semantic-release"
  },
  "prettier": {
    "bracketSpacing": false,
    "jsxBracketSameLine": false,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false,
    "overrides": [
      {
        "files": [
          "*.js",
          ".*.js"
        ],
        "options": {
          "trailingComma": "es5"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "{*.{js,json},**/*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "peerDependencies": {
    "tslint": "^5.9.0",
    "typescript": ">=2.1.0"
  },
  "devDependencies": {
    "@anvilabs/eslint-config": "^17.8.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "eslint": "^5.7.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "semantic-release": "^15.10.5"
  },
  "dependencies": {
    "resolve-pkg": "^1.0.0",
    "tslint-immutable": "^4.6.0",
    "tslint-sonarts": "^1.7.0"
  }
}
